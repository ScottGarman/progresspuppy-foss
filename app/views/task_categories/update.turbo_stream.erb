<%= turbo_stream.replace dom_id(@task_category) do %>
  <%= render partial: 'task_category', locals: { task_category: @task_category, just_updated: true } %>
<% end %>

<%= turbo_stream.update "task_categories_flash_alert" do %>
  <%= content_tag :div, "Task Category updated",
      class: "alert alert-success alert-compact",
      data: { controller: "fade" } %>
<% end %>
